@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="display-6">Applications (@Model.Count())</h6>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Full Name</th>
                <th scope="col">Apply At</th>
                <th scope="col">Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <td>@candidate.Email</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        There is no application. Please click here to
        <a class="alert alert-link" asp-action="Apply">apply.</a>

    </div>
}

<div class="">
</div>